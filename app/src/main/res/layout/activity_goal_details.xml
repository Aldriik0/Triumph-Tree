<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goal_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/goalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TitleTheme"
        />

    <TextView
        android:id="@+id/goalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularText"/>

    <TextView
        android:id="@+id/goalProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularText"/>

    <TextView
        android:id="@+id/goal_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularText"/>


    <!-- Spacer to push buttons to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleY="4"/>

    <!-- A horizontal LinearLayout for the mirrored buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Button 1 -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_goal"/>

        <!-- Spacer between buttons -->
        <View
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <!-- Button 2 (mirrored) -->
        <Button
            android:id="@+id/addProgressButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_progress"/>
    </LinearLayout>



</LinearLayout>