<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/app_bar_layout"/>

    <ImageView
        android:id="@+id/user_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/birch_large"
        android:layout_above="@id/goal_settings"/>
    <Button
            android:id="@+id/new_goal"
            android:text="@string/new_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="75dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/goal_settings"
            android:text="@string/goal_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/goal_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignBaseline="@+id/goal_settings"
        android:text="@string/goal_list"/>

</RelativeLayout>